<!-- Delete Modal -->
<div class="modal fade" id="deleteSLModal" tabindex="-1" role="dialog" aria-labelledby="deleteSLModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteSLModalLabel">Delete <%= @storage_location.Name %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="alert alert-danger" role="alert">Are you sure you want to delete <%= @storage_location.Name%>?</div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-light" data-dismiss="modal">Close</button>
        <%= link_to "Delete", storage_area_storage_location_path(@storage_area, @storage_location),
                                          method: :delete,
                                          :class => "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>