<!-- Edit Modal -->
<div class="modal fade" id="editSLModal" tabindex="-1" role="dialog" aria-labelledby="editSLModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editSLModalLabel">Edit <%= @storage_location.Name %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= render 'storage_locations/edit' %>
    </div>
  </div>
</div>