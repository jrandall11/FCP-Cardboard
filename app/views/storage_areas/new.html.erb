<div class="container container-white">
    <h1>Add a Storage Area</h1>
    <%= form_for :storage_area, url: storage_areas_path do |f| %>
        <% if @storage_area.errors.any? %>
            <% @storage_area.errors.full_messages.each do |msg| %>
              <div class="alert alert-danger"><%= msg %></div>
            <% end %>  
        <% end %>
        <p>
            <%= f.label :Name %><br>
            <%= f.text_field(:Name, {:class => 'form-control'}) %>
        </p>
        <p>
            <%= f.submit({:class => 'btn btn-primary'}) %>
        </p>
    <% end %>
</div>